<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_blue"
    tools:context=".View.Tasks.New_Task" >

    <ImageButton
        android:id="@+id/cancelCreatNewTaskButton"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/fi_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/fi_x" />

    <EditText
        android:id="@+id/newTaskNameEditText"
        android:layout_width="214dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bubble"
        android:backgroundTint="@color/light_Blue2"
        android:ems="10"
        android:gravity="center"
        android:hint="Task name"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_background"
        android:textColorHint="@color/design_default_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newTaskNoteEditText"
        android:layout_width="323dp"
        android:layout_height="355dp"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/bubble"
        android:backgroundTint="@color/light_Blue2"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/checkNewTaskButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newTaskNameEditText" />

    <ImageButton
        android:id="@+id/checkNewTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/checkmark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/checkmark" />

    <ImageButton
        android:id="@+id/newCalendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/bubble"
        android:backgroundTint="@color/light_Blue2"
        android:gravity="center"
        android:text="Ramind me"
        android:textColor="@color/design_default_color_background"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/newTaskNoteEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newTaskNameEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>